generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model FamilyMember {
  id        String        @id @default(uuid())
  name      String
  role      FamilyRole
  color     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relation: one family member can have many events and calendarFeeds
  events    FamilyEvent[]
  calendarFeeds CalendarFeed[]
}

model CalendarFeed {
  id             String       @id @default(uuid())
  url            String
  familyMember   FamilyMember @relation(fields: [familyMemberId], references: [id])
  familyMemberId String

  // Calender events will be using this
  events         FamilyEvent[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([familyMemberId])
}

model FamilyEvent {
  id             String       @id @default(uuid())
  title          String
  start          DateTime
  end            DateTime
  location       String?
  familyMemberId String
  familyMember   FamilyMember @relation(fields: [familyMemberId], references: [id], onDelete: Cascade)
  calendarFeedId String?
  calendarFeed   CalendarFeed? @relation(fields: [calendarFeedId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum FamilyRole {
  PARENT
  CHILD
}

